{
    "manifest_version":2,
    "name":"file_save",
    "description":"scrape data and save to local file",
    "version":"1.0",
    "browser_action":{
        "default_icon":"icon/ext.png",
        "default_popup":"main.html"
        
    },
    "content_scripts": [{
        "run_at": "document_idle",
        "js": [ "content_script.js" ],
        "matches": [ "<all_urls>" ]
    }],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "tabs",
        "<all_urls>"
    ]
}